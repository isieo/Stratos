<h2>Sign up</h2>

<%=  simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :wrapper => :stacked) do |f| %>
  <%= devise_error_messages! %>
  <div class="inputs">
  <%= f.input :name %>
  
  <%= f.input :email %>

  <%= f.input :password, :as=>:password %>

  <%= f.input :password_confirmation, :as=>:password  %>
  </div>
  <%= f.submit "Sign up" %>
<% end %>

<%= render :partial => "devise/shared/links" %>
